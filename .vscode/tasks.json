{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build all files",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-std=c++17",
                "${fileDirname}/SDL_Manager.cpp",
                "${fileDirname}/Shape.cpp",
                "${fileDirname}/Shader.cpp",
                "${fileDirname}/Engine.cpp",
                "${fileDirname}/Utility.cpp",
                "${fileDirname}/GameObject.cpp",
                "${fileDirname}/Renderer.cpp",
                "${fileDirname}/Quaternion.cpp",
                "${fileDirname}/SoundSystem.cpp",
                "${fileDirname}/Camera.cpp",
                "${fileDirname}/SceneGraph.cpp",
                "${fileDirname}/Main.cpp",
                "${fileDirname}/glew.c",
                "-I${fileDirname}/../include",
                "-I/opt/homebrew/Cellar/glew/2.2.0_1/include",
                "-I/opt/homebrew/opt/glm/include",
                "-L/usr/local/lib",
                "-L/opt/homebrew/lib",
                "-lGLEW",
                "-F/Library/Frameworks",
                "-framework", "SDL2",
                "-framework", "OpenGL",
                "-I/Library/Frameworks/SDL2.framework/Versions/A/Headers",
                "-rpath", "/Library/Frameworks",
                "-o", "${fileDirname}/../bin/Main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
